        <!-- Output Post -->
        <!-- If there are posts, print array -->
        <% if(locals.postsCreated == true) { %>
            <% for (let index = 0; index < reversedArray.length; index++) { %>
                <% console.log(index) %>
                <div id="post">
                    <div id="post-data">
                        <%- reversedArray[index].username %>
                        <a href="">
                            <%- reversedArray[index].profilePicture %>
                        </a>
                        <%- reversedArray[index].timeStamp %>
                    </div>
                    <div id="post-message">
                        <%- reversedArray[index].postSubject %>
                        <%- reversedArray[index].postMessage %>
                    </div>
                </div>
            <% }; %>
        <!-- If no posts yet -->
        <% } else if(locals.postsCreated == false) { %>
            <small>No posts yet</small>
        <!-- If posts fail -->
        <% } else { %>
            <small>Couldn't load posts</small>
        <% } %>
        

